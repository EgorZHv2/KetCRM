@page "/user"
@using KetCRM.BlazorClient.Components

<div class="row mt-4 mb-3">
      <div class="col-6 h4">
        Пользователи
      </div>
      <div class="col-6 d-flex justify-content-end">
        <button type="button" class="btn btn-info" data-mdb-toggle="modal" data-mdb-target="#modalRegister">
          Добавить пользователя
        </button>
      </div>
      <ModalRegister></ModalRegister>
    </div>
    <section class="pb-4">
      <div class="bg-white border rounded-5">

        <section class="w-100 p-4 pb-4">
          <div class="form-outline mb-4">
            <input type="search" class="form-control" id="datatable-search-input">
            <label class="form-label" for="datatable-search-input" style="margin-left: 0px;">Найти пользователя</label>
            <div class="form-notch">
              <div class="form-notch-leading" style="width: 9px;"></div>
              <div class="form-notch-middle" style="width: 47.2px;"></div>
              <div class="form-notch-trailing"></div>
            </div>
          </div>
          <div id="datatable" class="datatable">
            <div class="datatable-inner table-responsive ps" style="overflow: auto; position: relative;">
              <table class="table datatable-table">
                <thead class="datatable-header">
                  <tr>

                    <th style="cursor: pointer;" scope="col">ID</th>
                    <th style="cursor: pointer;" scope="col">Логин</th>
                    <th style="cursor: pointer;" scope="col">Почта</th>
                    <th style="cursor: pointer;" scope="col">Роль</th>
                    <th style="cursor: pointer;" scope="col">Фамилия</th>
                    <th style="cursor: pointer;" scope="col">Имя</th>
                    <th style="cursor: pointer;" scope="col">Отчество</th>
                    <th style="cursor: pointer;" scope="col">Последний логин</th>
                    <th style="cursor: pointer;" scope="col"></th>
                  </tr>
                </thead>
                <tbody class="datatable-body">
                  <tr scope="row" data-mdb-index="0">
                    <td data-mdb-field="field_0" false="">0</td>
                    <td data-mdb-field="field_1" false="">admin2022</td>
                    <td data-mdb-field="field_2" false="">admin@gmail.com</td>
                    <td data-mdb-field="field_3" false="">Администратор</td>
                    <td data-mdb-field="field_1" false="">Стеблев</td>
                    <td data-mdb-field="field_2" false="">Владислав</td>
                    <td data-mdb-field="field_3" false="">Николаевич</td>
                    <td data-mdb-field="field_4" false="">23.04.2022 15:30</td>
                    <td data-mdb-field="field_5 mx-auto" false="">
                      <a class="link-dark h6 modal-link-a"><i class="fas fa-user-edit" data-mdb-toggle="modal"
                          Data-mdb-target="#changeModal"></i></a>
                      <span class="m-2"></span>
                      <a class="link-dark h6"><i class="fas fa-trash " data-mdb-toggle="modal"
                          data-mdb-target="#trashModal"></i></a>
                    </td>
                  </tr>

                </tbody>
              </table>
              <div class="ps__rail-x" style="left: 0px; bottom: 0px;">
                <div class="ps__thumb-x" tabindex="0" style="left: 0px; width: 0px;"></div>
              </div>
              <div class="ps__rail-y" style="top: 0px; right: 0px;">
                <div class="ps__thumb-y" tabindex="0" style="top: 0px; height: 0px;"></div>
              </div>
            </div>

          </div>
          <div class="modal fade" id="trashModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Удаление пользователя</h5>
                  <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <span>Вы действительно хотите удалить пользователя?</span>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-danger">Удалить</button>
                </div>
              </div>
            </div>
          </div>
          <ModalRegister></ModalRegister>
        </section>


      </div>
    </section>

